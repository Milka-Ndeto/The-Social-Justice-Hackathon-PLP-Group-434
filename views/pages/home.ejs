<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Volunteer Connect</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <%- include('../partials/header.ejs') %>
  <!-- Hero Section -->
  <section class="hero">
      <% if (user) { %>
          <p>Hello, <%= user.name %>!</p>
          <a href="/dashboard">Go to Dashboard</a>
          <div id="user-button"></div>
      <% } else { %>
          <div id="sign-in"></div>
      <% } %>
      
      <h1>Connect with Meaningful Volunteer Opportunities in Your Community</h1>
      <p>Empowering individuals to make a difference through accessible volunteering.</p>
      <a href="/signup" class="cta-button">Get Started</a>
  </section>

  <!-- How It Works Section -->
  <section class="how-it-works">
      <h2>How It Works</h2>
      <p>Find opportunities, apply with ease, and make an impact!</p>
      <div class="steps">
          <div class="step">
              <img src="/images/signup-icon.png" alt="Sign Up">
              <h3>Sign Up</h3>
              <p>Create a profile.</p>
          </div>
          <div class="step">
              <img src="/images/browse-icon.png" alt="Browse Opportunities">
              <h3>Browse Opportunities</h3>
              <p>Search by interest or location.</p>
          </div>
          <div class="step">
              <img src="/images/impact-icon.png" alt="Make an Impact">
              <h3>Make an Impact</h3>
              <p>Connect and volunteer.</p>
          </div>
      </div>
  </section>

  <!-- Featured Opportunities Section -->
  <section class="featured-opportunities">
      <h2>Featured Opportunities</h2>
      <div class="opportunity">
          <h3>Community Clean-Up</h3>
          <p>Join us in cleaning the local park this weekend!</p>
          <p><strong>Location:</strong> Downtown Park</p>
          <a href="/opportunities">View More</a>
      </div>
      <div class="opportunity">
          <h3>Tutoring Program</h3>
          <p>Help students excel in their studies by volunteering as a tutor.</p>
          <p><strong>Location:</strong> Community Center</p>
          <a href="/opportunities">View More</a>
      </div>
  </section>

  <!-- Testimonials Section -->
  <section class="testimonials">
      <h2>User Feedback</h2>
      <div class="testimonial">
          <p>"Volunteer Connect helped me find opportunities that match my skills!"</p>
          <p><strong>- Sarah J.</strong></p>
      </div>
      <div class="testimonial">
          <p>"A fantastic platform for making a positive impact in my community!"</p>
          <p><strong>- John D.</strong></p>
      </div>
  </section>

  <!-- Why Volunteer Section -->
  <section class="why-volunteer">
      <h2>Why Volunteer?</h2>
      <div class="benefit">
          <h3>Build Skills</h3>
          <p>Gain valuable experiences.</p>
      </div>
      <div class="benefit">
          <h3>Meet Like-minded People</h3>
          <p>Connect with others who share your passions.</p>
      </div>
      <div class="benefit">
          <h3>Make a Positive Impact</h3>
          <p>Help your community thrive.</p>
      </div>
  </section>

  <!-- Blog/Resources Section -->
  <section class="blog-resources">
      <h2>Latest Articles</h2>
      <p><a href="/blog">Check out our latest blog posts on volunteering!</a></p>
  </section>

  <!-- Call to Action Section -->
  <section class="cta">
      <h2>Ready to Make a Difference?</h2>
      <p>Join our community of volunteers today!</p>
      <a href="/signup" class="cta-button">Sign Up Now</a>
  </section>

  <!-- Footer Section -->

  <div id="app"></div>
  <script>
      const clerkPubKey = '<%= clerkPubKey %>';
      const clerk = new Clerk(clerkPubKey);
      clerk.load().then(() => {
        if (clerk.user) {
          const userButtonDiv = document.getElementById('user-button');
          clerk.mountUserButton(userButtonDiv);
        } else {
          const signInDiv = document.getElementById('sign-in');
          clerk.mountSignIn(signInDiv);
        }
      });
  </script>
</body>
</html>
